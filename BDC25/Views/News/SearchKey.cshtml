@model List<Model.EF.NEWS>
@using Model.EF;
@{
    ViewBag.Title = "NewsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BDC25DbContext db = new BDC25DbContext();
    var listPostCom = (List<Model.EF.COMMUNITY>)ViewBag.ListPostUserCom;
}
@section cssPage{
    <link href="~/assets/User/CSS/tuyenTruyen7.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
}

@section scrFile{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/assets/User/JS/LoadMore.js"></script>
}

@section slideEndFoo{
    <div class="slide-facebook">
        <div class="slide-facebook_btop">
            <img class="img-on-bot" src="~/assets/User/img/backtop.png" alt="">
        </div>
    </div>
}

<!-- Home-7 -->
<div class="link-url">
    <a href="/Home/Index">Trang chủ</a>
    <span>/</span>
    <a href="#">Kết quả tìm kiếm: @ViewBag.KeyWord</a>
</div>

@if (Model.Count > 0)
{
    <div class="container-home-seven">
        <div class="container-slide-seven">
            <div class="slide-home-seven">
                @foreach (var item in Model)
                {
                    var NewsDetailsUrl = "/chi-tiet-bai-viet/" + item.UrlTitle + "-" + item.IDNews;

                    <div class="content-slide-seven content">
                        <div class="img-slide-seven">
                            <a href="@NewsDetailsUrl"><img src="@Url.Content(item.Image)" alt=""></a>
                        </div>
                        <div class="content-seven">
                            <p class="days-seven">@string.Format("{0:dd-MM-yyyy}", @item.NgayTao)</p>
                            <a href="@NewsDetailsUrl"><h2 class="name-seven">@item.TieuDe</h2></a>
                            <h3 class="title-seven">
                                @item.TomTat
                            </h3>
                            <a href="@NewsDetailsUrl" class="button">CHI TIẾT<i class="fa-solid fa-paw paw-seven"></i></a>
                        </div>
                    </div>
                }
                @foreach (var item in listPostCom)
                {
                    var PostDetailsUrl = "/chi-tiet-bai-viet-cong-dong/" + item.UrlTitle + "-" + item.IDCommunity;

                    <div class="content-slide-seven content">
                        <div class="img-slide-seven">
                            <a href="@PostDetailsUrl"><img src="@Url.Content(item.Image)" alt=""></a>
                        </div>
                        <div class="content-seven">
                            <p class="days-seven">@string.Format("{0:dd-MM-yyyy}", @item.NgayTao)</p>
                            <a href="@PostDetailsUrl"><h2 class="name-seven">@item.TieuDe</h2></a>
                            <h3 class="title-seven">
                                @item.TomTat
                            </h3>
                            <a href="@PostDetailsUrl" class="button">CHI TIẾT<i class="fa-solid fa-paw paw-seven"></i></a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
            <a href="#" id="loadMore">Hiển thị thêm</a>
        </div>
    </div>
}
else
{
    <div class="container-home-seven">
        <div class="container-slide-seven">
            <div class="slide-home-seven">
                <span class="seach">Không có bài viết nào</span>
            </div>
        </div>
    </div>
}


