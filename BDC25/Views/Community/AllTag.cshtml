@model List<Model.EF.COMMUNITY>
@using Model.EF;

@{
    ViewBag.Title = "AllTag";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BDC25DbContext db = new BDC25DbContext();
    var listPostUserCount = (List<BDC25.Models.CountPostFlowTag>)ViewBag.CountPostInTag;
}

@section cssPage{
    <link href="~/assets/User/CSS/tag.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
}
@section scrFile{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/assets/User/JS/LoadTag.js"></script>
}
<!-- Home-7 -->
<div class="link-url">
    <a href="/trang-chu">Trang chủ</a>
    <span>/</span>
    <a href="/cong-dong">Cộng đồng</a>
    <span>/</span>
    <a href="#">Thẻ cộng đồng</a>
</div>

<div class="container-home-seven">
    <div class="container-slide-seven">
        <div class="slide-home-seven">
            <div class="tags_popular">
                @foreach (var item in listPostUserCount)
                {
                    var TagCom = db.TAGS_COMMUNITY.Find(item.IDTag);
                    var UrlTag = "/danh-sach-bai-cong-dong/" + TagCom.UrlTitle + "-" + item.IDTag;
                    <a href="@UrlTag" class="content">
                        <div class="tags_items">
                            <div class="title_tags">
                                <h3>@item.Tagname</h3>
                                <span>@item.Count Bài</span>
                            </div>
                            <i class="fa-solid fa-arrow-right"></i>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
    <div>
        <a href="#" id="loadMore">Hiển thị thêm</a>
    </div>
</div>
