@model BDC25.Models.SendGmail

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
          integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>Đăng nhập</title>
    <link href="~/assets/User/CSS/forgotPass.css" rel="stylesheet" />
</head>

<body>
    <div class="container-login">
        <div class="login">
            <div>
                <img class="imgLogin" src="~/assets/User/img/pét.jpg" />
            </div>
            <div class="login-Input">
                <div class="Input">
                    <h2>Lấy lại tài khoản của bạn</h2>
                    <span class="text-success">@ViewBag.MessM</span>
                    @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form class="user">
                            <div class="form-group">
                                <p class="mb-4">
                                    @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control input-email", @autofocus = "autofocus", @placeholder = "Nhập tài khoản cũ" })
                                </p>
                            </div>

                            <div class="form-group">
                                <p class="mb-4">
                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control input-email", @autofocus = "autofocus", @placeholder = "Nhập email của bạn" })
                                </p>
                            </div>

                            <button type="submit" class="btn-login">
                                Gửi email
                            </button>
                        </form>
                    }
                </div>
                <div class="account">
                    <a href="/dang-nhap">Đăng nhập !</a>
                    <a href="/dang-ky">Tạo tài khoản !</a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>