        <div class="left-coment">
            @foreach (var item in ListDonate)
            {
                <div class="content">
                    <p>
                        <img title="@item.TieuDe" alt="@item.TieuDe" src="~/assets/User/img/donate2.png">
                        <span>@item.TieuDe</span>
                        <button class="btnDow" onclick="location.href='@Url.Action("Download", "Donate", new { fileName = Url.Content(item.File) })'">Tải xuống</button>
